@using TManagement.AppServices.ETasks
@model CreateOrEditETaskDto
@{
    ViewData["Title"] = "Create";
}


<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">UBold</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                            <li class="breadcrumb-item active">Basic Elements</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Create or Edit Task</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Task Info</h4>
                       

                        <div class="row">
                            <div class="col-lg-12">
                                <form asp-action="Create" enctype="multipart/form-data">

                                    <div class="mb-3">
                                        <label   asp-for="Title"  class="form-label"></label>
                                        <input asp-for="Title"   class="form-control">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Description" class="form-label"></label>
                                        <textarea asp-for="Description" class="form-control"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="DueDate" class="form-label"></label>
                                        <input asp-for="DueDate" class="form-control">
                                        <span asp-validation-for="DueDate" class="text-danger"></span>
                                    </div>


                                    <div class="mb-3">
                                        <label asp-for="Users" class="form-label"></label>
                                        <select id="lstUsers" asp-items="ViewBag.UserList" multiple asp-for="Users" class="form-control">


                                        </select>
                                        <span asp-validation-for="Users" class="text-danger"></span>
                                    </div>


                                    <div class="mb-3">
                                        <label asp-for="Attachments" class="form-label"></label>
                                        <input  multiple asp-for="Attachments" class="form-control">
                                        <span asp-validation-for="Attachments" class="text-danger"></span>
                                    </div>


                                    <button type="submit"
                                            class="btn btn-primary waves-effect waves-light">
                                        Submit
                                    </button>

                                  
                                </form>
                            </div> <!-- end col -->

                            
                        </div>
                        <!-- end row-->

                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div><!-- end col -->
        </div>
      

      

      

      

    </div> <!-- container -->

</div> 


@section styles {
    <!-- Select2 Css-->
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
}

@section Scripts{

    <script src="~/lib/select2/js/select2.min.js"></script>
    <script type="text/javascript">
        $('#lstUsers').select2();
    </script>
    <partial name="_ValidationScriptsPartial" />
}